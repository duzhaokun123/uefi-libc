list(APPEND CMAKE_MODULE_PATH "@CMAKE_INSTALL_PREFIX@/share/cmake/Modules")

set(CMAKE_SYSTEM_NAME "UEFI")
set(CMAKE_SYSTEM_PROCESSOR "@CMAKE_SYSTEM_PROCESSOR@")

set(CMAKE_SYSROOT "@CMAKE_INSTALL_PREFIX@")
include_directories(SYSTEM "${CMAKE_SYSROOT}/include")
link_directories("${CMAKE_SYSROOT}/lib")
link_libraries("${CMAKE_SYSROOT}/lib/libc.a" "${CMAKE_SYSROOT}/lib/libc++.a")

set(CMAKE_C_COMPILER "@CMAKE_C_COMPILER@")
set(CMAKE_CXX_COMPILER "@CMAKE_CXX_COMPILER@")

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)
